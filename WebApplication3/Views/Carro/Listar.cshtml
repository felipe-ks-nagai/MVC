@model IEnumerable<WebApplication3.Models.Carro>

@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>

<p>
    @Html.ActionLink("Criar novo", "Create", null, null, new {@class = "btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Placa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ano)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Placa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ano)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cor)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = Model.ToList<WebApplication3.Models.Carro>().IndexOf(item)}, new { @class = "btn btn-secondary" } ) 
            @Html.ActionLink("Detalhes", "Exibir", new {  id=Model.ToList<WebApplication3.Models.Carro>().IndexOf(item) }, new { @class = "btn btn-secondary" }) 
            @Html.ActionLink("Deletar", "Delete", new { id = Model.ToList<WebApplication3.Models.Carro>().IndexOf(item) }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
