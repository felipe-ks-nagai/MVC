@model IEnumerable<WebApplication3.Models.Celular>

@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>

<p>
    @Html.ActionLink("Criar novo", "Create", null, null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Numero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Novo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Novo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = Model.ToList<WebApplication3.Models.Celular>().IndexOf(item) }, new { @class = "btn btn-success" }) 
            @Html.ActionLink("Detalhes", "Exibir", new {  id= Model.ToList<WebApplication3.Models.Celular>().IndexOf(item) }, new { @class = "btn btn-secondary" }) 
            @Html.ActionLink("Deletar", "Delete", new { id = Model.ToList<WebApplication3.Models.Celular>().IndexOf(item) }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
