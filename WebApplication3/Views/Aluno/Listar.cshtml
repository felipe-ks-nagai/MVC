@model IEnumerable<WebApplication3.Models.Aluno>

@{
    ViewBag.Title = "Listar";
}
<h2>Listar</h2>
<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RA)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RA)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=Model.ToList<WebApplication3.Models.Aluno>().IndexOf(item) }) |
            @Html.ActionLink("Exibir detalhes", "Exibir", new { id=Model.ToList<WebApplication3.Models.Aluno>().IndexOf(item) }) |
            @Html.ActionLink("Delete", "Delete", new {  id=Model.ToList<WebApplication3.Models.Aluno>().IndexOf(item)  })
        </td>
    </tr>
}

</table>
